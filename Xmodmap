! https://blacketernal.wordpress.com/set-up-key-mappings-with-xmodmap/
! https://wiki.archlinux.org/index.php/Xmodmap
! http://www.in-ulm.de/~mascheck/X11/xmodmap.html
! http://wilt.isaac.su/articles/how-to-remap-your-capslock-key-to-esc-key-in-ubuntu-linux

!clear shift
clear lock
clear control
clear mod1
!clear mod2
!clear mod3
clear mod4
!clear mod5

! make escape = win_l/super_l/mod4/??
keycode 9 = Super_L

! make caps = escape
keycode 66 = Escape

! make control_l = alt_l
keycode 37 = Alt_L

! make win_l/super_l = win_l/super_l/mod4 (an extra one)
keycode 115 = Super_L

! make alt_l = control_l
keycode 64 = Control_L

! make alt_r = control_r
keycode 113 = Control_R

! make menu(_r) = win_r/super_r/mod4 (extra)
keycode 117 = Super_R

! make control_r = alt_r
keycode 109 = Alt_R

!add shift =     Shift_L Shift_R
!add lock =
add control =   Control_L Control_R
add mod1 =      Alt_L Alt_R Meta_L
!add mod2 =      Num_Lock
!add mod3 =
add mod4 =      Super_L Super_R Super_L Hyper_L
!add mod5 =      Mode_switch ISO_Level3_Shift

