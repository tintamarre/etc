# Use "Super" / "Windows" for i3 keybindings
set $mod Mod4

# We want click to focus, thank you
focus_follows_mouse no

# How should windows be formatted? 1 pixel only please
new_window pixel 3
new_float pixel 3
hide_edge_borders both

# Scratchpad like a BOSS!
# http://i3wm.org/docs/userguide.html#_scratchpad
bindsym $mod+Control+backslash move scratchpad
bindsym $mod+backslash scratchpad show

# Titlebar font, not that we really need them for our setup
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod1

# Use urxvt client to attach to already running daemon for new terms
bindsym $mod+Return exec --no-startup-id urxvtc

# Screen locking
bindsym $mod+Control+slash exec --no-startup-id i3lock -c 000000

# kill focused window; p for pulverize
bindsym $mod+Control+p kill

# start dmenu (a program launcher)
bindsym $mod+semicolon exec dmenu_run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Control+h move left
bindsym $mod+Control+j move down
bindsym $mod+Control+k move up
bindsym $mod+Control+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right

# split in horizontal orientation, i for hOrizontal
bindsym $mod+o split h

# split in vertical orientation, o for vertIcal
bindsym $mod+i split v

# enter fullscreen mode for the focused container, u for Upsized
bindsym $mod+u fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+n layout stacking
bindsym $mod+m layout tabbed
bindsym $mod+comma layout toggle split

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+period focus parent

# focus the child container
bindsym $mod+Control+period focus child

# switch to workspace
bindsym $mod+7 workspace 0
bindsym $mod+8 workspace 1
bindsym $mod+9 workspace 2
bindsym $mod+0 workspace 3
bindsym $mod+minus workspace 4
bindsym $mod+equal workspace 5

# move focused container to workspace
bindsym $mod+Control+7 move container to workspace 0
bindsym $mod+Control+8 move container to workspace 1
bindsym $mod+Control+9 move container to workspace 2
bindsym $mod+Control+0 move container to workspace 3
bindsym $mod+Control+underscore move container to workspace 4
bindsym $mod+Control+plus move container to workspace 5

# We will do the following from i3-msg from the term
# reload the configuration file
# bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
# bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+slash mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        mode dock
        hidden_state hide
        modifier $mod
        status_command i3status
        position bottom
}

bindsym $mod+apostrophe bar mode invisible
bindsym $mod+Control+apostrophe bar mode dock

# Rulez for Windoze11!@
# auto-floating windows:
for_window [class="Gitk"] floating enable
for_window [class="XClock"] floating enable
for_window [class="XCalc"] floating enable
for_window [class="Lxpolkit"] floating enable
